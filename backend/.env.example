# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mdent

# Server
PORT=8080
LOG_LEVEL=info
NODE_ENV=development

# Media uploads
MEDIA_UPLOAD_DIR=/data/media

# Admin
ADMIN_PASSWORD=changeme

# QPay Integration
QPAY_ENV=sandbox
QPAY_BASE_URL_SANDBOX=https://merchant-sandbox.qpay.mn
QPAY_BASE_URL_LIVE=https://merchant.qpay.mn
QPAY_CLIENT_ID=your_qpay_client_id
QPAY_CLIENT_SECRET=your_qpay_client_secret
QPAY_INVOICE_CODE=your_qpay_invoice_code
QPAY_CALLBACK_URL=https://your-domain.com/api/qpay/callback
QPAY_RECEIVER_CODE=terminal
# Per-branch QPay credentials (JSON map keyed by Branch.id as string)
# Example: {"1":{"clientId":"...","clientSecret":"...","invoiceCode":"..."},"default":{...}}
QPAY_BRANCHES_JSON=
# Dev/Test Settings
ALLOW_DEV_QPAY=true

# Public base URL (used for QPay booking callback URLs â€” must be HTTPS in production)
PUBLIC_BASE_URL=https://your-domain.com
# APP_BASE_URL is an alias for PUBLIC_BASE_URL
APP_BASE_URL=https://your-domain.com

# E-Barimt (DDTD) Integration
EBARIMT_API_URL=https://ebarimt.mn
EBARIMT_API_KEY=your_ebarimt_api_key
EBARIMT_POS_ID=your_pos_id
EBARIMT_BRANCH_REG_NO=your_branch_reg_no
EBARIMT_DISTRICT_CODE=34
# Set to "true" to skip external API call in dev/CI/test
EBARIMT_SKIP=true

