# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mdent

# Server
PORT=8080
LOG_LEVEL=info
NODE_ENV=development

# Media uploads
MEDIA_UPLOAD_DIR=/data/media

# Admin
ADMIN_PASSWORD=changeme

# QPay Integration
QPAY_ENV=sandbox
QPAY_BASE_URL_SANDBOX=https://merchant-sandbox.qpay.mn
QPAY_BASE_URL_LIVE=https://merchant.qpay.mn
QPAY_CLIENT_ID=your_qpay_client_id
QPAY_CLIENT_SECRET=your_qpay_client_secret
QPAY_INVOICE_CODE=your_qpay_invoice_code
QPAY_CALLBACK_URL=https://your-domain.com/api/qpay/callback
QPAY_RECEIVER_CODE=terminal
# Per-branch QPay credentials (JSON map keyed by Branch.id as string)
# Example: {"1":{"clientId":"...","clientSecret":"...","invoiceCode":"..."},"default":{...}}
QPAY_BRANCHES_JSON=
# Dev/Test Settings
ALLOW_DEV_QPAY=true
# Set to "true" to disable JWT auth on e-Barimt routes (dev/staging ONLY — not allowed in production)
DISABLE_AUTH=false

# Public base URL (used for QPay booking callback URLs — must be HTTPS in production)
PUBLIC_BASE_URL=https://your-domain.com
# APP_BASE_URL is an alias for PUBLIC_BASE_URL
APP_BASE_URL=https://your-domain.com

# E-Barimt (DDTD) Integration - legacy (kept for reference)
EBARIMT_API_URL=https://ebarimt.mn
EBARIMT_API_KEY=your_ebarimt_api_key
EBARIMT_POS_ID=your_pos_id
EBARIMT_BRANCH_REG_NO=your_branch_reg_no
EBARIMT_DISTRICT_CODE=34
# Set to "true" to skip external API call in dev/CI/test
EBARIMT_SKIP=true

# eBarimt POSAPI 3.0
POSAPI_BASE_URL=http://localhost:8080
POSAPI_TIMEOUT=15000
POSAPI_MERCHANT_TIN=your_merchant_tin
POSAPI_POS_NO=your_pos_no
POSAPI_BRANCH_NO=your_branch_no
POSAPI_DISTRICT_CODE=34
POSAPI_BILL_ID_SUFFIX=
# Tenant/final-consumer TIN sent as consumerNo (default: 30000000000 = ЭЦСИЙН ХЭРЭГЛЭГЧ)
POSAPI_CONSUMER_NO=30000000000
# Operator merchant request credentials
POSAPI_OPERATOR_TOKEN=your_operator_bearer_token
POSAPI_OPERATOR_API_KEY=your_operator_api_key
POSAPI_OPERATOR_BASE_URL=https://api.ebarimt.mn/api/tpi/receipt/saveOprMerchants

