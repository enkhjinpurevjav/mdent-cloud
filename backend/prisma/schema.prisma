// backend/prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Branch {
  id        Int      @id @default(autoincrement())
  name      String
  address   String?
  createdAt DateTime @default(now())

  patients  Patient[]
  users     User[]
}

enum UserRole {
  admin
  doctor
  receptionist
  accountant
  nurse
  manager
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  name       String?
  role       UserRole @default(receptionist)
  branchId   Int?
  createdAt  DateTime @default(now())
  branch     Branch?  @relation(fields: [branchId], references: [id])
}

model Patient {
  id              Int          @id @default(autoincrement())
  regNo           String       @unique // Citizenship ID: 2 Cyrillic letters + 8 digits
  ovog            String                // Last name
  name            String                // First name
  gender          String
  birthDate       DateTime
  phone           String?
  address         String?
  bloodType       String?
  citizenship     String?       @default("Mongolian")
  emergencyPhone  String?
  notes           String?
  branchId        Int
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  branch          Branch        @relation(fields: [branchId], references: [id])
  patientBook     PatientBook?  @relation(fields: [id], references: [patientId]) // 1:1 digital history book
}

model PatientBook {
  id         Int      @id @default(autoincrement())
  bookNumber String   @unique // Unique digital history book number
  patientId  Int      @unique // Each patient has one digital book
  patient    Patient  @relation(fields: [patientId], references: [id])
  
  // You can add further relations here (e.g., encounters, media, etc.)
}

model Encounter {
  id            Int         @id @default(autoincrement())
  patientBookId Int
  doctorId      Int?
  visitDate     DateTime    @default(now())
  notes         String?

  patientBook   PatientBook @relation(fields: [patientBookId], references: [id])
}
